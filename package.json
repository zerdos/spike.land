{
  "name": "monorepo",
  "version": "0.9.56",
  "description": "our monorepo",
  "repository": "git@github.com:zerdos/spike.land.git",
  "author": "Zoltan Erdos <zolika84@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*",
    "devcontainers/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -p run dev",
    "dev:fe": "yarn workspace @spike-npm-land/code dev",
    "dev:workers": "yarn workspaces foreach -p --include '@spike-npm-land/{code-worker,transpile}' run dev",
    "build": "yarn clean && yarn build:all",
    "build:all": "yarn workspaces foreach -p run build",
    "build:fe": "yarn workspace @spike-npm-land/code build",
    "build:workers": "yarn workspaces foreach -p --include '@spike-npm-land/{code-worker,transpile}' run build",
    "deploy:dev": "yarn build:fe && yarn workspaces foreach -p run deploy:dev",
    "deploy:prod": "NODE_ENV=production yarn build:fe && yarn workspaces foreach -p run deploy:prod",
    "deploy:full": "yarn fmt && git add . && yarn build:all && yarn deploy:dev && yarn deploy:prod && git commit -m 'deploy' && git pull && git push",
    "types:check": "yarn workspaces foreach -p run types:check",
    "types:build": "yarn workspaces foreach -p run types:build",
    "test": "yarn workspaces foreach -p run test",
    "test:e2e": "playwright test tests/*.spec.ts",
    "clean": "yarn workspaces foreach -p run clean",
    "lint": "yarn eslint && yarn fmt",
    "eslint": "eslint --config eslint.config.cjs .",
    "fmt": "yarn dprint fmt \"packages/**/*\"",
    "ci": "yarn install && yarn lint && yarn build:all && yarn test",
    "release": "yarn clean && yarn build:all && yarn deploy:full",
    "docker:build": "yarn workspaces foreach -p run docker:build",
    "docker:push": "yarn workspaces foreach -p run docker:push"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250129.0",
    "@eslint/js": "9.19.0",
    "@typescript-eslint/parser": "8.22.0",
    "@yarnpkg/sdks": "3.2.0",
    "dprint": "0.48.0",
    "eslint": "9.19.0",
    "eslint-plugin-react": "7.37.4",
    "typescript": "5.7.3",
    "typescript-eslint": "8.22.0"
  },
  "packageManager": "yarn@4.6.0",
  "dependencies": {
    "diff-match-patch-ts": "0.6.0"
  }
}
