    "esm-worker": "0.135.18",
    "hono": "4.7.5",
    "immutable": "5.1.1",
    "jiti": "2.4.2",
    "mime-db": "1.54.0",
    "mime-types": "2.1.35",
    "miniflare": "4.20250321.0",
    "openai": "4.89.0",
    "openai-edge": "1.2.2",
    "p-map": "7.0.3",
    "p-queue": "8.1.0",
    "replicate": "1.0.1"
