{
  "name": "@spike-npm-land/spike-land-backend",
  "description": "Main backend for spike.land, providing real-time collaboration, API services, AI integrations, and static asset hosting via Cloudflare Workers.",
  "version": "0.9.56",
  "type": "module",
  "module": "dist/index.js",
  "private": true,
  "peerDependencies": {
    "react": "18.0.0",
    "react-dom": "18.0.0"
  },
  "scripts": {
    "dev": "npx wrangler dev",
    "dev:remote": "npx wrangler dev --remote",
    "// build": "yarn clean",
    "build:worker": "echo 'No build required - using direct deployment'",
    "w:deploy:dev": "npx wrangler deploy --env testing --minify",
    "w:deploy:prod": "npx wrangler deploy --minify",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "types:check": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:api": "yarn types:check && yarn lint && yarn test:unit",
    "test:watch": "vitest",
    "__STATIC_CONTENT_MANIFEST": "./src/staticContent.mjs"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "0.4.1",
    "@cloudflare/vitest-pool-workers": "0.11.1",
    "@cloudflare/workers-types": "4.20251221.0",
    "@eslint/js": "9.39.2",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@spike-npm-land/transpile": "0.9.56",
    "@types/mime-db": "1.43.6",
    "@types/mime-types": "3.0.1",
    "@typescript-eslint/parser": "8.50.0",
    "@vitest/runner": "4.0.16",
    "@vitest/snapshot": "4.0.16",
    "cross-env": "10.1.0",
    "esbuild": "0.27.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.26",
    "globals": "16.5.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rimraf": "6.1.2",
    "rollup": "4.54.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "2.0.56",
    "@anthropic-ai/sdk": "0.71.2",
    "@clerk/backend": "2.29.0",
    "@clerk/clerk-sdk-node": "5.1.6",
    "@spike-npm-land/code": "0.9.56",
    "@types/node": "25.0.3",
    "ai": "5.0.116",
    "async-mutex": "0.5.0",
    "avl": "2.0.0",
    "esbuild-wasm": "0.27.2",
    "eslint": "9.39.2",
    "esm-worker": "0.135.18",
    "hono": "4.11.1",
    "immutable": "5.1.4",
    "jiti": "2.6.1",
    "mime-db": "1.54.0",
    "mime-types": "3.0.2",
    "miniflare": "4.20251217.0",
    "openai": "6.15.0",
    "openai-edge": "1.2.3",
    "p-map": "7.0.4",
    "p-queue": "9.0.1",
    "replicate": "1.4.0",
    "zod": "4.2.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
