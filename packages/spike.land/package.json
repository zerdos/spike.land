{
  "name": "@spike.land/code-worker",
  "description": "An edge chat service that runs on Cloudflare Workers using Durable Objects",
  "version": "0.9.2",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "yarn x:build && yarn deploy:dev",
    "deploy:dev": "wrangler publish --env=testing dist/index.js",
    "prepublishOnly": "wrangler publish",
    "predeploy": "yarn c:build && yarn x:build",
    "c:build": "yarn workspace @spike.land/code build",
    "x:build": "esbuild  --bundle --tree-shaking=true --metafile=good.json --format=esm --loader:.html=text --external:__STATIC_CONTENT_MANIFEST --tree-shaking --platform=browser src/index.ts --outdir=dist"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "0.2.0",
    "@cloudflare/workers-types": "^3.16.0",
    "esbuild": "0.15.10",
    "miniflare": "^2.9.0",
    "typescript": "4.8.4",
    "wrangler": "2.1.11"
  },
  "dependencies": {
    "@spike.land/code": "^0.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "db8e23b83d2dd82efc101eca9d1b5ec76d122df4"
}
