{
  "name": "@spike-npm-land/code-worker",
  "description": "An edge chat service that runs on Cloudflare Workers using Durable Objects",
  "version": "0.9.56",
  "type": "module",
  "module": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "// build": "yarn clean",
    "build:worker": "echo 'No build required - using direct deployment'",
    "w:deploy:dev": "wrangler deploy --env=testing -- minify ./src/cf-workers.ts",
    "w:deploy:prod": "wrangler deploy --minify ./src/cf-workers.ts",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "types:check": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:api": "yarn types:check && yarn lint && yarn test:unit",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "0.3.4",
    "@cloudflare/vitest-pool-workers": "0.7.4",
    "@cloudflare/workers-types": "4.20250224.0",
    "@eslint/js": "9.21.0",
    "@rollup/plugin-commonjs": "28.0.2",
    "@rollup/plugin-node-resolve": "16.0.0",
    "@spike-npm-land/transpile": "0.9.56",
    "@types/mime-db": "1.43.5",
    "@types/mime-types": "2.1.4",
    "@typescript-eslint/parser": "8.25.0",
    "@vitest/runner": "3.0.7",
    "@vitest/snapshot": "3.0.7",
    "cross-env": "7.0.3",
    "esbuild": "0.25.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "globals": "16.0.0",
    "rimraf": "6.0.1",
    "rollup": "4.34.8",
    "typescript": "5.8.2",
    "vitest": "3.0.7",
    "vitest-environment-miniflare": "2.14.4",
    "wrangler": "3.111.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.38.0",
    "@clerk/backend": "1.24.3",
    "@clerk/clerk-sdk-node": "5.1.6",
    "@remix-run/cloudflare": "2.16.0",
    "@remix-run/react": "2.16.0",
    "@spike-npm-land/code": "0.9.56",
    "@types/node": "22.13.5",
    "async-mutex": "0.5.0",
    "avl": "1.6.0",
    "esbuild-wasm": "0.25.0",
    "eslint": "9.21.0",
    "esm-worker": "0.135.18",
    "hono": "4.7.2",
    "immutable": "5.0.3",
    "jiti": "2.4.2",
    "mime-db": "1.53.0",
    "mime-types": "2.1.35",
    "miniflare": "3.20250214.1",
    "openai": "4.86.1",
    "openai-edge": "1.2.2",
    "p-map": "7.0.3",
    "p-queue": "8.1.0",
    "replicate": "1.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
