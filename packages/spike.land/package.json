{
  "name": "@spike-npm-land/code-worker",
  "description": "An edge chat service that runs on Cloudflare Workers using Durable Objects",
  "version": "0.9.56",
  "type": "module",
  "module": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "// build": "yarn clean",
    "build:worker": "echo 'No build required - using direct deployment'",
    "w:deploy:dev": "wrangler deploy --env=testing -- minify ./src/cf-workers.ts",
    "w:deploy:prod": "wrangler deploy --minify ./src/cf-workers.ts",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "types:check": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:api": "yarn types:check && yarn lint && yarn test:unit",
    "test:watch": "vitest",
    "build:snakecase-keys": "rollup --bundleConfigAsCjs -c rollup.config.mjs"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "0.3.4",
    "@cloudflare/vitest-pool-workers": "0.6.16",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@eslint/js": "^9.20.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@spike-npm-land/transpile": "0.9.56",
    "@types/mime-db": "1.43.5",
    "@types/mime-types": "2.1.4",
    "@typescript-eslint/parser": "8.24.0",
    "@vitest/runner": "3.0.5",
    "@vitest/snapshot": "3.0.5",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "rimraf": "6.0.1",
    "rollup": "^4.34.7",
    "typescript": "5.7.3",
    "vitest": "3.0.5",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "3.109.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.36.3",
    "@clerk/backend": "1.24.1",
    "@clerk/clerk-sdk-node": "5.1.6",
    "@remix-run/cloudflare": "2.15.3",
    "@remix-run/react": "2.15.3",
    "@spike-npm-land/code": "0.9.56",
    "@types/node": "22.13.4",
    "async-mutex": "0.5.0",
    "avl": "1.5.3",
    "esbuild-wasm": "0.25.0",
    "eslint": "^9.20.1",
    "esm-worker": "0.135.18",
    "hono": "4.7.1",
    "immutable": "5.0.3",
    "jiti": "^2.4.2",
    "mime-db": "1.53.0",
    "mime-types": "2.1.35",
    "miniflare": "3.20250204.1",
    "openai": "4.85.1",
    "openai-edge": "1.2.2",
    "p-map": "7.0.3",
    "p-queue": "8.1.0",
    "replicate": "1.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
