{
  "name": "@spike/chat",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wrangler dev\"",
    "dev:frontend": "vite",
    "dev:backend": "wrangler dev",
    "build": "vite build && node scripts/build-inline-html.js",
    "build:frontend": "vite build && node scripts/build-inline-html.js",
    "build:inline": "node scripts/build-inline-html.js",
    "preview": "vite preview",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:cucumber": "npx tsx node_modules/.bin/cucumber-js --format @cucumber/pretty-formatter --parallel 1",
    "test:cucumber:smoke": "npx tsx node_modules/.bin/cucumber-js --format @cucumber/pretty-formatter --parallel 1 --tags @smoke",
    "test:cucumber:ci": "tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --profile ci",
    "test:cucumber:report": "tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --format html:test-results/cucumber-report.html",
    "test:cucumber:parallel": "tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --parallel 3",
    "test:all": "npm run test && npm run test:cucumber",
    "types:check": "tsc --noEmit",
    "lint": "eslint src",
    "fmt": "prettier --write src"
  },
  "dependencies": {
    "@clerk/backend": "^1.18.0",
    "@cloudflare/ai": "^1.0.68",
    "@cloudflare/workers-types": "^4.20241230.0",
    "nanoid": "^5.0.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stripe": "^17.6.0",
    "svix": "^1.44.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.1.0",
    "@playwright/test": "^1.49.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "miniflare": "^3.20241230.0",
    "playwright-bdd": "^8.4.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8",
    "wrangler": "^4.33.2"
  }
}
