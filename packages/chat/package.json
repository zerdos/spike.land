{
  "name": "@spike/chat",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"next dev\" \"wrangler dev --local\"",
    "dev:frontend": "next dev",
    "dev:backend": "wrangler dev --local",
    "dev:legacy": "concurrently \"vite\" \"wrangler dev\"",
    "build": "next build && opennextjs-cloudflare build && ./fix-opennext-html.sh",
    "build:cloudflare": "opennextjs-cloudflare build && ./fix-opennext-html.sh",
    "build:frontend": "next build",
    "build:legacy": "vite build && node scripts/build-inline-html.js",
    "build:inline": "node scripts/build-inline-html.js",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "preview:local": "wrangler dev --local",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "deploy:production": "opennextjs-cloudflare build && wrangler deploy --env production",
    "deploy:development": "opennextjs-cloudflare build && wrangler deploy --env development",
    "deploy:preview": "opennextjs-cloudflare build && wrangler deploy --env preview",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:setup": "wrangler d1 execute DATABASE --file=./sql/schema.sql",
    "db:migrate": "wrangler d1 migrations apply DATABASE",
    "db:seed": "wrangler d1 execute DATABASE --file=./sql/seed.sql",
    "kv:create": "wrangler kv:namespace create KV_SESSIONS && wrangler kv:namespace create KV_CACHE",
    "r2:create": "wrangler r2 bucket create spike-chat-attachments-dev && wrangler r2 bucket create spike-chat-attachments-prod",
    "cf:setup": "npm run kv:create && npm run r2:create && npm run db:setup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:cucumber": "concurrently --kill-others --success first \"yarn dev:frontend\" \"sleep 5 && dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs\"",
    "test:cucumber:smoke": "concurrently --kill-others --success first \"yarn dev:frontend\" \"sleep 5 && dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --tags @smoke\"",
    "test:cucumber:ci": "dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --profile ci",
    "test:cucumber:report": "dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --format html:test-results/cucumber-report.html",
    "test:cucumber:parallel": "dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --parallel 3",
    "test:cucumber:debug": "dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --tags '@debug' --fail-fast",
    "test:cucumber:auth": "dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --tags '@auth'",
    "test:cucumber:subscription": "dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --tags '@subscription'",
    "test:cucumber:mobile": "dotenv -e .env.test -- npx tsx node_modules/.bin/cucumber-js --config cucumber.config.mjs --tags '@mobile'",
    "test:all": "npm run test && npm run test:cucumber",
    "test:all:ci": "npm run test:coverage && npm run test:cucumber:ci && npm run test:e2e",
    "test:integration": "npm run test:cucumber && npm run test:e2e",
    "test:setup": "node scripts/test-setup.cjs",
    "test:teardown": "node scripts/test-teardown.cjs",
    "test:seed": "dotenv -e .env.test -- node scripts/seed-test-data.cjs",
    "test:clean": "rimraf test-results test.db test-local.db .nyc_output coverage",
    "types:check": "echo 'TypeScript checking disabled for chat package - using ESLint only'",
    "types:check:watch": "tsc --noEmit --watch",
    "lint": "eslint src app features --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src app features --ext .ts,.tsx,.js,.jsx --fix",
    "lint:cucumber": "eslint features --ext .ts",
    "fmt": "prettier --write src app features",
    "fmt:check": "prettier --check src app features",
    "mock:server": "node features/support/mock-server.js",
    "mock:server:bg": "node features/support/mock-server.js &",
    "pretest": "npm run test:clean && npm run test:setup",
    "posttest": "npm run test:teardown"
  },
  "dependencies": {
    "@assistant-ui/react": "0.11.28",
    "@assistant-ui/react-ai-sdk": "1.1.5",
    "@assistant-ui/react-markdown": "0.11.1",
    "@assistant-ui/styles": "0.2.3",
    "@clerk/backend": "2.17.1",
    "@clerk/clerk-js": "5.98.0",
    "@clerk/clerk-react": "5.50.0",
    "@clerk/nextjs": "6.33.2",
    "@cloudflare/ai": "1.2.2",
    "@cloudflare/workers-types": "4.20251004.0",
    "@opennextjs/cloudflare": "1.9.1",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-tooltip": "1.2.8",
    "@stripe/stripe-js": "8.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.544.0",
    "nanoid": "5.1.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "stripe": "19.1.0",
    "svix": "1.76.1",
    "tailwind-merge": "3.3.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@cucumber/cucumber": "12.2.0",
    "@cucumber/messages": "30.0.0",
    "@cucumber/pretty-formatter": "2.3.0",
    "@playwright/test": "1.55.1",
    "@tailwindcss/postcss": "4.1.14",
    "@types/node": "24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "@vitejs/plugin-react": "5.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "10.4.21",
    "concurrently": "9.2.1",
    "dotenv-cli": "10.0.0",
    "eslint": "9.37.0",
    "miniflare": "4.20251001.0",
    "next": "15.5.4",
    "playwright-bdd": "8.4.1",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "tailwindcss": "4.1.14",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vercel": "48.2.0",
    "vite": "7.1.9",
    "vitest": "3.2.4",
    "wrangler": "4.42.0"
  }
}
