{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "..",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"]
  },
  "exclude": ["node_modules", "dist", "src/dist"],
  "include": [
    "src"
  ]
}
