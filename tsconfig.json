{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "composite": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./packages/code/src/@/*"],
    },
    "esModuleInterop": true
  },
  "references": [
    { "path": "./devcontainers/devcontainer-generator/tsconfig.json" },
    { "path": "./packages/code/tsconfig.json" },  
    { "path": "./packages/spike.land/tsconfig.json" },
  ],
  "exclude": ["dts", "node_modules", "dist"],
  "include": ["eslint.config.js"]
}
