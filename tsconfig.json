{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true
  },
  "exclude": [
    "worker/dist",
    "cloudflare/spike-land/dist",
    "packages/spike-land-site",
    "**dist**",
    "node_modules/**/*",
    "packages/monaco-editor",
    "docs"
  ]
}
